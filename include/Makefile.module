#
# Makefile.module --
#
#	Makefile stub for AOLserver modules.  Variables to set
#	before including this file include:
#
#	NSHOME		AOLserver source dir (default "..")
#	MOD		Name of module (required).
#	OBJS		List of object files (required).
#	LIB		Name of public library (optional)
#	LIBOBJS		List of library object files (required with LIB)
#	HDRS		Header OBJS depend on.
#	MODLIBS		Extra link libraries.
#	MODINST		Extra install directives.
#
#	See ../nsext/Makefile for an example.
#	

NSHOME ?= ..
include $(NSHOME)/include/Makefile.global

ifdef LIB
LIBFILE=lib$(LIB).$(LIBEXT)
LIBINST=install-lib
MODLIBS += $(LIBFILE)
endif

all: $(LIBFILE) $(MOD)

$(MOD): $(LIBFILE) $(OBJS)
	$(RM) $(MOD)
	$(LDSO) -o $(MOD) $(OBJS) $(MODLIBS) $(LIBS)

$(LIBFILE): $(LIBOBJS)
	$(RM) $(LIB)
	$(LDLIB) -o $(LIBFILE) $(LIBOBJS) $(LIBS) $(RPATH)

$(OBJS): $(HDRS)

install: all $(LIBINST) $(MODINST)
	$(RM) $(INSTBIN)/$(MOD)
	$(CP) $(MOD) $(INSTBIN)/

install-lib:
	$(RM) $(INSTLIB)/$(LIBFILE)
	$(CP) $(LIBFILE) $(INSTLIB)/
clean:
	$(RM) $(OBJS) $(MOD) $(LIBFILE) $(LIBOBJS)
