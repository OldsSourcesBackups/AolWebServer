#
# Makefile.global.in --
#
#	Common and platform-specific make variables to be included
#	by other makefiles.
#

srcdir		= @SRCDIR@
prefix		= @prefix@

RM           	= /bin/rm -f
MKDIR		= /bin/mkdir -p
ifdef NSBUILD
    INSTALL_SH	= $(srcdir)/install-sh -c
else
    INSTALL_SH	= $(INSTBIN)/install-sh -c
endif
INSTALL_DATA	= $(INSTALL_SH) -m 644

RANLIB	     	= @TCL_RANLIB@
LIBEXT		= @TCL_SHLIB_SUFFIX@
TCL_EXEC_PREFIX	= @TCL_EXEC_PREFIX@
LIB_RUNTIME_DIR =
TCL_CC_SEARCH_FLAGS = @TCL_CC_SEARCH_FLAGS@
TCL_LD_SEARCH_FLAGS = @TCL_LD_SEARCH_FLAGS@
LDLIB		= @LDLIB@
LDSO		= @LDSO@
CCRPATH		= @CCRPATH@
LDRPATH		= @LDRPATH@

CC		= @TCL_CC@
CFLAGS_DEBUG	= @TCL_CFLAGS_DEBUG@
CFLAGS_OPTIMIZE = @TCL_CFLAGS_OPTIMIZE@
CFLAGS_WARNING	= @TCL_CFLAGS_WARNING@
CFLAGS_INCLUDE	= -I$(INCDIR) @TCL_INCLUDE_SPEC@
CFLAGS_SHLIB	= @TCL_SHLIB_CFLAGS@ @TCL_EXTRA_CFLAGS@
DEFS      	= -DNO_CONST @TCL_DEFS@ @DEFS@
CFLAGS		= @CFLAGS_DEFAULT@ $(CFLAGS_WARNING) $(CFLAGS_EXTRA) $(CFLAGS_INCLUDE) $(DEFS)

ifndef NSBUILD
    LDFLAGS	+= -L$(prefix)/lib
    LIBS	+= -lnsthread -lnsd
    INCDIR	= $(prefix)/include
else
    LDFLAGS	+= -L../nsthread -L../nsd 
    INCDIR	= ../include
    ifneq (nsthread,$(LIB))
    	LIBS	+= -lnsthread
    	ifneq (nsd,$(LIB))
            LIBS	+= -lnsd
    	endif
    endif
endif

LIBS		+= @TCL_LIB_SPEC@ @TCL_LIBS@
CCLIBS		= $(LIBS) @TCL_LD_FLAGS@

# Install directories
INSTBIN		= $(prefix)/bin
INSTLIB		= $(prefix)/lib
INSTMOD		= $(prefix)/modules
INSTTCL		= $(prefix)/modules/tcl
INSTSRV		= $(prefix)/servers/server1
INSTSRVMOD	= $(INSTSRV)/modules
INSTSRVPAG	= $(INSTSRV)/pages

# Platform-specific options.
uname = $(shell uname -a)

# Solaris 2.7+
ifneq (,$(findstring SunOS,$(uname)))
    LIBS+=-lrt
endif

# Add dynamic library entry point flags.
ifdef LIBINIT
    ifneq (,$(findstring Darwin,$(uname)))
	LDLIB	+= -init _$(LIBINIT)
    else
	CFLAGS	+= -D$(LIBINIT)=_init
    endif
endif
