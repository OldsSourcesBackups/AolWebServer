#
# Makefile.global.in --
#
#	Common and platform-specific make variables to be included
#	by other makefiles.
#

MKDIR        	= /bin/mkdir -p
RM           	= /bin/rm -f
CP           	= /bin/cp -fp
AR	     	= /usr/bin/ar

AOLSERVER    	= @prefix@
RANLIB	     	= @TCL_RANLIB@
CC		= @TCL_CC@
LIBEXT		= @TCL_SHLIB_SUFFIX@
TCL_EXEC_PREFIX	= @TCL_EXEC_PREFIX@
LIB_RUNTIME_DIR =
TCL_CC_SEARCH_FLAGS = @TCL_CC_SEARCH_FLAGS@
TCL_LD_SEARCH_FLAGS = @TCL_LD_SEARCH_FLAGS@
LDLIB		= @LDLIB@
LDSO		= @LDSO@
CCRPATH		= @CCRPATH@
LDRPATH		= @LDRPATH@
CFLAGS      	= @TCL_SHLIB_CFLAGS@ @TCL_CFLAGS_WARNING@ @TCL_EXTRA_CFLAGS@ \
		  -I$(INCDIR) @TCL_INCLUDE_SPEC@ -DNO_CONST @TCL_DEFS@ @DEFS@

INCDIR	=  $(NSHOME)/include
ifneq (nsthread,$(LIB))
    LIBS	+= -L$(NSHOME)/nsthread -lnsthread
    ifneq (nsd,$(LIB))
        LIBS	+= -L$(NSHOME)/nsd -lnsd
    endif
endif
LIBS		+= @TCL_LIB_SPEC@ @TCL_LIBS@

# Install directories
INSTBIN		= $(AOLSERVER)/bin
INSTLIB		= $(AOLSERVER)/lib
INSTMOD		= $(AOLSERVER)/modules
INSTTCL		= $(AOLSERVER)/modules/tcl
INSTSRV		= $(AOLSERVER)/servers/server1
INSTSRVMOD	= $(AOLSERVER)/servers/server1/modules
INSTSRVPAG	= $(AOLSERVER)/servers/server1/pages

# Platform-specific options.
uname = $(shell uname -a)

# Solaris 2.7+
ifneq (,$(findstring SunOS,$(uname)))
    AR=/usr/ccs/bin/ar
    CCRPATH += $(CCRFLAG)/usr/lib/lwp
    LDRPATH += $(LDRFLAG)/usr/lib/lwp
    LIBS+=-lrt
endif

# Add dynamic library entry point flags.
ifdef LIBINIT
    ifneq (,$(findstring Darwin,$(uname)))
	LDLIB	+= -init _$(LIBINIT)
    else
	CFLAGS	+= -D$(LIBINIT)=_init
    endif
endif
