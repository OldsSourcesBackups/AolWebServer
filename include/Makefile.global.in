#
# Makefile.global --
#
#	Common and platform-specific make variables to be included
#	by other makefiles.
#

#
# Variables from Tcl config.
#

AOLSERVER    	= @prefix@

#
# Command variables.
#

MKDIR        =   /bin/mkdir -p
RM           =   /bin/rm -f
CP           =   /bin/cp -fp
AR	     =   /usr/bin/ar
RANLIB	     	= @TCL_RANLIB@
LDLIB		= @TCL_SHLIB_LD@
LDSO		= $(LDLIB)
CC		= @TCL_CC@ @TCL_EXTRA_CFLAGS@
CFLAGS      	= @TCL_SHLIB_CFLAGS@ @TCL_CFLAGS_WARNING@ \
		  -I$(INCDIR) @TCL_INCLUDE_SPEC@ \
		  -DNO_CONST @TCL_DEFS@ @DEFS@

#
# Libraries.
#

INCDIR	=  $(NSHOME)/include
ifneq (nsthread,$(LIB))
    LIBS	+= -L$(NSHOME)/nsthread -lnsthread
    ifneq (nsd,$(LIB))
        LIBS	+= -L$(NSHOME)/nsd -lnsd
    endif
endif
LIBS		+= @TCL_LIB_SPEC@ @TCL_LIBS@


#
# Variables for the dynamic linker runtime path.
#


LIBEXT		= @TCL_SHLIB_SUFFIX@
TCLLIBDIR	= @TCL_EXEC_PREFIX@/lib
ASLIBDIR	= $(AOLSERVER)/lib
LIB_RUNTIME_DIR =
CCRFLAG		= @TCL_CC_SEARCH_FLAGS@
LDRFLAG		= @TCL_LD_SEARCH_FLAGS@
LDRPATH		= $(LDRFLAG)$(ASLIBDIR) $(LDRFLAG)$(TCLLIBDIR)
CCRPATH		= $(CCRFLAG)$(ASLIBDIR) $(CCRFLAG)$(TCLLIBDIR)

# Install directories
INSTBIN		= $(AOLSERVER)/bin
INSTLIB		= $(AOLSERVER)/lib
INSTMOD		= $(AOLSERVER)/modules
INSTTCL		= $(AOLSERVER)/modules/tcl
INSTSRV		= $(AOLSERVER)/servers/server1
INSTSRVMOD	= $(AOLSERVER)/servers/server1/modules
INSTSRVPAG	= $(AOLSERVER)/servers/server1/pages

# Platform-specific options.
uname = $(shell uname -a)

# Linux 2.2+
ifneq (,$(findstring Linux,$(uname)))
    CFLAGS+=-DUSE_FIONREAD=1 -DUSE_PROCTHREAD
endif

# Solaris 2.7+
ifneq (,$(findstring SunOS,$(uname)))
    AR=/usr/ccs/bin/ar
    CCRPATH += $(CCRFLAG)/usr/lib/lwp
    LDRPATH += $(LDRFLAG)/usr/lib/lwp
    CFLAGS+=-DUSE_DUPHIGH=1 
    LDLIB+=-nostartfiles
    LIBS+=-lrt
endif

# Mac OS X
ifneq (,$(findstring Darwin,$(uname)))
    LDSO=cc -bundle
    LDLIB=cc -dynamiclib -install_name $(ASLIBDIR)/$(LIBFILE)
    CCRPATH=
    LDRPATH=
    CFLAGS+=-DUSE_DLSYMPREFIX=1
endif

# Add dynamic library entry point flags.
ifdef LIBINIT
    ifneq (,$(findstring Darwin,$(uname)))
	LDLIB	+= -init _$(LIBINIT)
    else
	CFLAGS	+= -D$(LIBINIT)=_init
    endif
endif
